cabal-version:      3.4
name:               haskell-halogen-material
version:            0.1.0.0
-- synopsis:
-- description:
license:            Apache-2.0
license-file:       LICENSE
author:             Mateusz Go≈õlinowski
maintainer:         mateusz.goslinowski@gmail.com
-- copyright:
category:           Web
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

flag no-bundle-jsbits
  description: Don't bundle foreign code implementation into the library
  default:     False
  manual:      True

common warnings
    ghc-options: -Wall
    default-extensions: 
        OverloadedStrings
        CPP
        StrictData
        DuplicateRecordFields
        NoFieldSelectors
        OverloadedRecordDot
        RecordWildCards
        NamedFieldPuns
        NoImplicitPrelude
    build-depends: 
        base, 
        protolude, 
        unliftio, 
        text, 
        containers, 
        haskell-halogen-core, 
        clay, 
        row-types,
        extra

library
    import:           warnings
    exposed-modules:  
        Halogen.Material.Button
        Halogen.Material.Icons
        Halogen.Material.List
        Halogen.Material.Monad
        Halogen.Material.Tabs
    hs-source-dirs:   src
    default-language: GHC2024

    if !flag(no-bundle-jsbits) && arch(javascript)
        js-sources:
            src/Halogen/Material/List.js
            src/Halogen/Material/Ripple.js
            src/Halogen/Material/Tabs.js

executable halogen-material-app
    import:           warnings
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        haskell-halogen-material

    hs-source-dirs:   app
    default-language: GHC2024
